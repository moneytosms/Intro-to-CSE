---
// Open Source Specialisation page
import Layout from '@/layouts/Layout.astro';
import TableOfContents from '@/components/TableOfContents.astro';

const headings = [
  { depth: 2, slug: 'coming-soon', text: 'Coming Soon' },
];
---

<Layout 
  title="Open Source Specialisation - Intro to CSE"
  showGlassyBackground={true}
  glassyConfig={{
    color: "rgba(97, 179, 220, 0.12)",
    opacity: 0.25,
    blur: "30px"
  }}
>
  <div class="container max-w-screen-2xl">
    <!-- Navigation breadcrumb -->
    <div class="py-4">
      <nav class="flex items-center space-x-2 text-sm text-muted-foreground">
        <a href="/" class="hover:text-foreground transition-colors">Home</a>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6"></path>
        </svg>
        <a href="/specialisations" class="hover:text-foreground transition-colors">Specialisations</a>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6"></path>
        </svg>
        <span class="font-medium text-foreground">Open Source</span>
      </nav>
    </div>
    
    <div class="flex flex-1 gap-6 md:gap-10">
      <!-- Main content -->
      <main class="flex-1 min-w-0">
        <div class="prose prose-gray dark:prose-invert max-w-none">
          <div class="mb-8 space-y-4">
            <div class="flex items-center space-x-4 mb-6">
              <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-gradient-to-br from-[#61b3dc] to-[#1a4d5c]">
                <svg class="h-8 w-8 text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="3"></circle>
                  <path d="M12 1v6m0 6v6"></path>
                  <path d="m15.14 8.86 4.24-4.24"></path>
                  <path d="m4.86 19.14 4.24-4.24"></path>
                  <path d="m8.86 8.86-4.24-4.24"></path>
                  <path d="m19.14 19.14-4.24-4.24"></path>
                </svg>
              </div>
              <div>
                <h1 class="text-4xl font-bold tracking-tight lg:text-5xl text-[#61b3dc]">
                  Open Source
                </h1>
                <p class="text-xl text-muted-foreground">
                  Contribute to projects that impact millions worldwide.
                </p>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-[#23272f99] via-[#1a1d23cc] to-[#23272f99] backdrop-blur-xl border border-[#61b3dc] shadow-xl rounded-2xl p-8 text-center">
            <div class="flex justify-center mb-6">
              <div class="flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-[#61b3dc]/20 to-[#1a4d5c]/20 border border-[#61b3dc]/30">
                <svg class="h-10 w-10 text-[#61b3dc]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 6v6l4 2"></path>
                </svg>
              </div>
            </div>
            
            <h2 id="coming-soon" class="text-3xl font-bold text-[#61b3dc] mb-4">Coming Soon</h2>
            <p class="text-lg text-[#d1b3ff] mb-6 max-w-2xl mx-auto">
              We're developing a comprehensive guide to open source contribution. 
              This section will teach you how to find projects, make meaningful contributions, 
              and build a reputation in the open source community.
            </p>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8 text-sm">
              <div class="bg-[#61b3dc]/10 rounded-lg p-4">
                <h3 class="font-semibold text-[#61b3dc] mb-2">Project Contribution</h3>
                <p class="text-[#d1b3ff]">Finding & contributing</p>
              </div>
              <div class="bg-[#61b3dc]/10 rounded-lg p-4">
                <h3 class="font-semibold text-[#61b3dc] mb-2">Community Building</h3>
                <p class="text-[#d1b3ff]">Collaboration skills</p>
              </div>
              <div class="bg-[#61b3dc]/10 rounded-lg p-4">
                <h3 class="font-semibold text-[#61b3dc] mb-2">Documentation</h3>
                <p class="text-[#d1b3ff]">Writing & testing</p>
              </div>
              <div class="bg-[#61b3dc]/10 rounded-lg p-4">
                <h3 class="font-semibold text-[#61b3dc] mb-2">Licensing</h3>
                <p class="text-[#d1b3ff]">Legal considerations</p>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/specialisations"
                class="inline-flex h-12 items-center justify-center rounded-xl bg-gradient-to-r from-[#61b3dc] to-[#1a4d5c] px-8 text-base font-semibold text-white shadow-lg transition-all hover:scale-105"
              >
                Explore Other Specialisations
              </a>
              <a
                href="/"
                class="inline-flex h-12 items-center justify-center rounded-xl border border-[#61b3dc] bg-transparent px-8 text-base font-semibold text-[#61b3dc] transition-all hover:bg-[#61b3dc] hover:text-white"
              >
                Back to Home
              </a>
            </div>
          </div>
        </div>
      </main>
      
      <!-- Table of Contents Sidebar -->
      <aside class="hidden xl:block w-64 shrink-0">
        <div class="sticky top-16">
          <TableOfContents headings={headings} />
        </div>
      </aside>
    </div>
  </div>
</Layout>
