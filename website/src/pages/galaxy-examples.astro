---
// Example page showing different glassy background configurations
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Background Examples - Intro to CSE"
  showGlassyBackground={true}
  glassyConfig={{
    color: "rgba(99, 102, 241, 0.15)",
    opacity: 0.3,
    blur: "20px"
  }}
>
  <div class="container max-w-4xl py-6 lg:py-10">
    <h1 class="text-4xl font-bold mb-8">Glassy Background Examples</h1>
    
    <div class="space-y-8">
      <!-- Purple Glass -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Purple Glass Effect</h2>
        <div style="width: 100%; height: 200px; position: relative; border-radius: 8px; overflow: hidden; backdrop-filter: blur(20px); background: linear-gradient(135deg, rgba(147, 51, 234, 0.15) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(147, 51, 234, 0.15) 100%);"></div>
        <pre class="mt-4 bg-muted p-4 rounded text-sm overflow-x-auto"><code>glassyConfig={{
  color: "rgba(147, 51, 234, 0.15)",
  opacity: 0.3,
  blur: "25px"
}}</code></pre>
      </div>

      <!-- Blue Glass -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Blue Glass Effect</h2>
        <div style="width: 100%; height: 200px; position: relative; border-radius: 8px; overflow: hidden; backdrop-filter: blur(30px); background: linear-gradient(135deg, rgba(59, 130, 246, 0.12) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(59, 130, 246, 0.12) 100%);"></div>
        <pre class="mt-4 bg-muted p-4 rounded text-sm overflow-x-auto"><code>glassyConfig={{
  color: "rgba(59, 130, 246, 0.12)",
  opacity: 0.25,
  blur: "30px"
}}</code></pre>
      </div>

      <!-- Green Glass -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Green Glass Effect</h2>
        <div style="width: 100%; height: 200px; position: relative; border-radius: 8px; overflow: hidden; backdrop-filter: blur(22px); background: linear-gradient(135deg, rgba(16, 185, 129, 0.12) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(16, 185, 129, 0.12) 100%);"></div>
        <pre class="mt-4 bg-muted p-4 rounded text-sm overflow-x-auto"><code>glassyConfig={{
  color: "rgba(16, 185, 129, 0.12)",
  opacity: 0.28,
  blur: "22px"
}}</code></pre>
      </div>

      <!-- Amber Glass -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Amber Glass Effect</h2>
        <div style="width: 100%; height: 200px; position: relative; border-radius: 8px; overflow: hidden; backdrop-filter: blur(28px); background: linear-gradient(135deg, rgba(245, 158, 11, 0.12) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(245, 158, 11, 0.12) 100%);"></div>
        <pre class="mt-4 bg-muted p-4 rounded text-sm overflow-x-auto"><code>glassyConfig={{
  color: "rgba(245, 158, 11, 0.12)",
  opacity: 0.26,
  blur: "28px"
}}</code></pre>
      </div>

      <!-- Pink Glass -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Pink Glass Effect</h2>
        <div style="width: 100%; height: 200px; position: relative; border-radius: 8px; overflow: hidden; backdrop-filter: blur(32px); background: linear-gradient(135deg, rgba(236, 72, 153, 0.12) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(236, 72, 153, 0.12) 100%);"></div>
        <pre class="mt-4 bg-muted p-4 rounded text-sm overflow-x-auto"><code>glassyConfig={{
  color: "rgba(236, 72, 153, 0.12)",
  opacity: 0.24,
  blur: "32px"
}}</code></pre>
      </div>

      <!-- Configuration Options -->
      <div class="border rounded-lg p-4 backdrop-blur-sm bg-white/5">
        <h2 class="text-2xl font-semibold mb-4">Configuration Options</h2>
        <div class="prose">
          <table class="w-full">
            <thead>
              <tr>
                <th>Prop</th>
                <th>Type</th>
                <th>Default</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><code>color</code></td>
                <td>string</td>
                <td>"rgba(255, 255, 255, 0.1)"</td>
                <td>Primary color for the glass effect (RGBA format)</td>
              </tr>
              <tr>
                <td><code>opacity</code></td>
                <td>number</td>
                <td>0.1</td>
                <td>Overall opacity of the background effect</td>
              </tr>
              <tr>
                <td><code>blur</code></td>
                <td>string</td>
                <td>"20px"</td>
                <td>Backdrop blur intensity (CSS blur value)</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout>
